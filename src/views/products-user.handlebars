<!-- /src/views/products-user.handlebars -->

<div class="row">
  {{#each products}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm position-relative">
      <div class="card-body pt-3">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
        <p class="card-text"><strong>Stock:</strong> {{this.stock}}</p>
        <p class="card-text"><strong>Categoría:</strong> {{this.category}}</p>
      </div>

      <!-- Botón de venta -->
      <button class="btn btn-success btn-sm position-absolute bottom-0 end-0 mb-2 me-2"
        onclick="agregarAlCarrito('{{this._id}}')">
        Agregar al Carrito
      </button>
    </div>
  </div>
  {{/each}}
</div>